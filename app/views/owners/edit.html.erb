<% provide(:title, "Edit Owner") %> 
<h1>Update Owner</h1>
<div class="row">
  <div class="span6 offset3">
  	<p><%= link_to "All Owners", owners_path %></p>  	
    <%= form_for(@owner) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= render 'fields', f: f %>

      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>