<% provide(:title, 'Category Points') %>
<h1>Category List</h1>
<p>Offer: <%= @offer.heading %> </p>
<table class="table table-hover">
  <thead>
    <th>Category</th>
    <th>Edit</th>
    <th>Delete</th>
  </thead>
  <tbody>  
  	<%= render @offer_categories unless @offer_categories.nil? %>
  </tbody>	  	
</table>	

<div class="row">
  <div class="span6 offset3">
	<%= form_for(@ocategories) do |f| %>
	  <%= render 'shared/error_messages', object: f.object %>

      <%= render 'fields', f: f %>

      <%= f.hidden_field :offer_id, :value => @offer.id  %>

      <%= f.submit "Create new Category", class: "btn btn-large btn-primary" %>
	<% end %>	
  </div>
</div>
