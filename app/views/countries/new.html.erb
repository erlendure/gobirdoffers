<% provide(:title, 'Create Country') %>
<h1>New Locale</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@country) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :country_name %>
      <%= f.text_field :country_name %>

      <%= f.label :default_locale_id %>
      <%= f.number_field :default_locale_id %>

      <%= f.submit "Create new Country", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>