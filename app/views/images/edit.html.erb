<% provide(:title, "Edit Image") %> 
<h1>Update Image</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for @image, :url => images_path, :html => { :multipart => true } do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= render 'fields', f: f %>

      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>