<% provide(:title, @user.name) %>

<%= render 'shared/admin_header', heading: @user.name, btn_txt: 'Show All', path: users_path %>

<div class="row">
  <div class="span5 offset1">
    <p><strong>Offer Count:</strong> <%= @user.offers.count %></p>
    <p><strong>Username:</strong> <%= @user.username %></p>	  
    <address>
      <p><strong>Address:</strong> <%= @user.address1 %></p>
      <p><strong>City:</strong> <%= @user.city %></p>
      <p><strong>State:</strong> <%= @user.state %></p>
      <p><strong>Zip:</strong> <%= @user.zip %></p>
      <p><strong>Phone:</strong> <%= @user.phone %></p>        
    <address>

    <p><strong>eMail:</strong> <%= @user.email %></p>        
    <p><strong>Web:</strong> <%= @user.url %></p>              
    <p><strong>Administrator:</strong> <%= @user.admin %></p>
  </div> 
</div>
