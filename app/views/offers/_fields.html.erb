<div class="row">
  <div class="span5 offset1">
    <%= form_for(@offer) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
	  
		<%= f.label :owner_id %>
		<%= f.collection_select(:owner_id, @owners, :id, :name, {:prompt => true}) %>

		<%= f.label :heading %>
		<%= f.text_field :heading %>

		<label for="offer_active">Active?</label>
		<%= f.check_box :active %>      

		<%= f.label :terms %>
		<%= f.text_area :terms %>
		
  </div>
  <div class="span5 offset1">
  
		<%= f.label :price %>
		<%= f.number_field :price %>

		<%= f.label :discount %>
		<%= f.number_field :discount %>
  
		<label for="offer_featured">Featured?</label>
		<%= f.check_box :featured %>    

		<%= f.label :details %>
		<%= f.text_area :details %>

		<%= f.label :end_date %>
		<%= f.date_select :end_date %>
		
	  </br></br>
			
      <%= f.submit btn_txt, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

